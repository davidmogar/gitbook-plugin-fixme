{
  "name": "gitbook-plugin-ribbon",
  "description": "Adds a ribbon in the corner of the GitBook page",
  "main": "index.js",
  "license": "MIT",
  "homepage": "https://github.com/davidmogar/gitbook-plugin-ribbon",
  "version": "0.1.0",
  "author": {
    "name": "David Moreno-GarcÃ­a",
    "email": "david.mogar@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidmogar/gitbook-plugin-ribbon.git"
  },
  "keywords": [
    "gitbook",
    "github",
    "ribbon",
    "plugin"
  ],
  "bugs": {
    "url": "https://github.com/davidmogar/gitbook-plugin-ribbon/issues"
  },
  "engines": {
    "gitbook": ">2.5.0"
  },
  "gitbook": {
    "properties": {
      "appendFilepath": {
        "default": false,
        "title": "Append filepath to the end of the url",
        "type": "boolean"
      },
      "color": {
        "default": "black",
        "enum": [
          "black",
          "blue",
          "green",
          "orange",
          "red"
        ],
        "title": "Ribbon color (defaults to black)",
        "type": "string"
      },
      "icon": {
        "default": "fa-external-link",
        "title": "Font awesome icon to use when the ribbon is hidden",
        "type": "string"
      },
      "text": {
        "required": true,
        "title": "Ribbon text",
        "type": "string"
      },
      "url": {
        "required": true,
        "title": "URL to open on click",
        "type": "string"
      }
    }
  }
}
